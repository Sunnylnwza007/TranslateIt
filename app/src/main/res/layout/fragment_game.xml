<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="game"
            type="buu.informatics.s59160090.translateit.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bungee"
            android:text="@string/time"
            android:textColor="#FFFDFD"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="84dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bungee"
            android:text="@{game.currentTimeString}"
            android:textColor="#FFFDFD"
            tools:text="0:00"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/score"
            android:layout_width="67dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/bungee"
            android:text="@{game.stringScore}"
            android:textColor="#FFFDFD"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/bungee"
            android:text="@string/score"
            android:textColor="#FFFDFD"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/score"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qs"
            android:layout_width="0dp"
            android:layout_height="163dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="@{game.currentQuestion.text}"
            android:textColor="#FFFDFD"
            android:textSize="52sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/ans1"
            android:layout_width="181dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="@{game.answers[0]}"
            android:textColor="#FFFDFD"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qs" />

        <Button
            android:id="@+id/ans2"
            android:layout_width="181dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="@{game.answers[1]}"
            android:textColor="#FFFDFD"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/ans1"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/ans3"
            android:layout_width="182dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="@{game.answers[2]}"
            android:textColor="#FFFDFD"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ans1" />

        <Button
            android:id="@+id/ans4"
            android:layout_width="181dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/holo_blue_dark"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="@{game.answers[3]}"
            android:textColor="#FFFDFD"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/ans3"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>